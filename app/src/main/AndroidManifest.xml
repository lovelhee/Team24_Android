<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:name=".ChallengeOnAir"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChallengeOnAirAndroid"
        tools:targetApi="31">

        <activity
            android:name=".view.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.ChallengeOnAirAndroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.challenge.OngoingChallengeActivity"
            android:exported="false" />
        <activity
            android:name=".view.challenge.ChallengeRoomInfoActivity"
            android:exported="false" />
        <activity
            android:name=".view.mypage.MyPageActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.challenge.CreateChallengeActivity"
            android:exported="false" />
        <activity
            android:name=".view.mypage.MyPageHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.mypage.MyPageProfileActivity"
            android:exported="false" />
        <activity
            android:name=".view.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".view.challenge.CreateChallengeCompletedDialog"
            android:exported="false" />
        <activity
            android:name=".view.alarm.AlarmActivity"
            android:exported="false" />
        <activity
            android:name=".view.challenge.ChallengeOngoingActivity"
            android:exported="true"
            android:theme="@style/Theme.ChallengeOnAirAndroid" />
        <activity
            android:name=".view.alarm.AlarmActivity"
            android:exported="false" />


        <!-- 카카오 로그인 웹뷰 액티비티 추가 -->
        <activity
            android:name=".view.login.KakaoWebViewActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize" />

        <!-- jitsi -->
        <receiver
            android:name="org.jitsi.meet.sdk.BroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="org.jitsi.meet.CONFERENCE_JOINED" />
                <action android:name="org.jitsi.meet.CONFERENCE_TERMINATED" />
                <action android:name="org.jitsi.meet.CONFERENCE_WILL_JOIN" />
            </intent-filter>
        </receiver>




    </application>

</manifest>