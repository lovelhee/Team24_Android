<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.okaka.challengeonairandroid">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:name=".ChallengeOnAir"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChallengeOnAirAndroid"
        tools:targetApi="31">

        <activity
            android:name=".view.login.FBLoginActivity"
            android:exported="true" />

        <activity
            android:name=".view.challenge.ChallengeOngoingActivity"
            android:exported="true"
            android:theme="@style/Theme.ChallengeOnAirAndroid" />
        <activity
            android:name=".view.login.GoogleLogInActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".view.challenge.DeleteChallengeActivity"
            android:exported="false" />
        <activity
            android:name=".view.challenge.ParticipateChallengeActivity"
            android:exported="false" />
        <activity
            android:name=".view.mypage.MyPageActivity"
            android:exported="false" />
        <activity
            android:name=".view.challenge.CreateChallengeActivity"
            android:exported="false" />
        <activity
            android:name=".view.mypage.MyPageHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.mypage.MyPageProfileActivity"
            android:exported="false" />

        <activity
            android:name=".view.alarm.AlarmActivity"
            android:exported="false" />
        <activity
            android:name=".view.vote.LoadingActivity"
            android:exported="false" />
        <activity
            android:name=".view.vote.VoteActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.KakaoWebViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="false" />
    </application>

</manifest>