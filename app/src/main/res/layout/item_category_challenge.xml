<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="challenge"
            type="com.challengeonair.challengeonairandroid.model.data.Challenge" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvChallengeCover"
            android:layout_width="83dp"
            android:layout_height="83dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:clipChildren="true"
            android:clipToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivChallengeCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_exercise" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-10-12"
            android:textColor="@color/text_white_gray"
            android:textSize="10sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/cvChallengeCover"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStartTime"
            android:text="11:00"
            android:textColor="@color/text_white_gray"
            android:textSize="10sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/tvDate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTime"
            android:text="~"
            android:textColor="@color/text_white_gray"
            android:textSize="10sp"
            android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@+id/tvStartTime"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvEndTime"
            android:text="13:00"
            android:textColor="@color/text_white_gray"
            android:textSize="10sp"
            android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@+id/tvTime"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvChallengeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3대 500을 위하여"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cvChallengeCover"
            app:layout_constraintTop_toBottomOf="@+id/tvDate" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 · 헬스"
            android:textColor="@color/text_gray"
            android:layout_marginStart="8dp"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/cvChallengeCover"
            app:layout_constraintTop_toBottomOf="@+id/tvChallengeName" />

        <LinearLayout
            android:id="@+id/iconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cvChallengeCover"
            app:layout_constraintTop_toBottomOf="@+id/tvCategory"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCurrentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/main_red"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명 예약중"
                android:textColor="@color/main_red"
                android:textSize="8sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
