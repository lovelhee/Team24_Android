<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="challenge"
            type="com.okaka.challengeonairandroid.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_backward"
                android:background="@android:color/transparent"
                android:layout_gravity="start"
                android:contentDescription="@string/backward" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_marginHorizontal="40dp"
                android:hint="챌린지를 검색해주세요."
                android:background="@drawable/back_search_bar"
                android:drawableEnd="@drawable/ic_close"
                android:textSize="20sp"
                android:textColor="@color/black" />

        </androidx.appcompat.widget.Toolbar>

        <RadioGroup
            android:id="@+id/rgChallengeCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/toolBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbExercise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                android:text="@string/category_exercise"
                android:checked="true"
                android:button="@null"
                android:background="@drawable/btn_create_challenge_radio" />

            <RadioButton
                android:id="@+id/rbDevelopment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                android:text="@string/category_development"
                android:button="@null"
                android:background="@drawable/btn_create_challenge_radio" />

            <RadioButton
                android:id="@+id/rbHobby"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                android:text="@string/category_hobby"
                android:button="@null"
                android:background="@drawable/btn_create_challenge_radio" />

            <RadioButton
                android:id="@+id/rbStudy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="15dp"
                android:text="@string/category_study"
                android:button="@null"
                android:background="@drawable/btn_create_challenge_radio" />

        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/rvSearchResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/rgChallengeCategory"
            tools:listitem="@layout/item_category_challenge"
            android:layout_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
