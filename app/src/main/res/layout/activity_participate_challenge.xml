<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.okaka.challengeonairandroid.viewmodel.ParticipateChallengeViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".view.challenge.ParticipateChallengeActivity">

            <ImageView
                android:id="@+id/ivChallengeCover"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="280dp"
                android:src="@drawable/sample_running"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/challenge_image_description" />

            <ImageButton
                android:id="@+id/ibBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_white_backward"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/backward" />

            <TextView
                android:id="@+id/tvRecruit"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/challenge_recruit"
                android:visibility="visible"
                android:textColor="@color/main_red"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/rounded_recruit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivChallengeCover"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"/>

            <TextView
                android:id="@+id/tvRecruitComplete"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/challenge_recruit_complete"
                android:visibility="invisible"
                android:textColor="@color/text_green"
                android:textSize="11sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/rounded_recruit_complete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivChallengeCover"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"/>

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/sample_user_profile"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRecruit"
                android:background="@drawable/rounded_host_profile"
                android:layout_marginTop="12dp"
                android:clipToOutline="true"
                android:layout_marginStart="24dp"
                android:contentDescription="@string/user_profile_description" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/ivProfile"
                app:layout_constraintTop_toBottomOf="@+id/tvRecruit">

                <TextView
                    android:id="@+id/tvHostName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:layout_gravity="center"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/rounded_host"
                    android:layout_gravity="center"
                    android:text="@string/host"
                    android:textColor="@color/text_gray"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBody"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivProfile"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_body"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRecruitText"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutBody"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_height="wrap_content"
                android:text="@string/recruit_num"
                android:textSize="13sp"
                android:textColor="@color/text_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutCurrentNum"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/layoutBody"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:text="@string/current_num_2"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/main_red"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:id="@+id/tvCurrentNum"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/main_red"
                    android:layout_marginEnd="6dp"
                    android:text="@string/people_num"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/main_red"
                    android:layout_marginEnd="6dp"
                    android:text="@string/slash"/>

                <TextView
                    android:text="@string/max_num_3"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/main_red"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:id="@+id/tvMaxNum"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/main_red"
                    android:layout_marginEnd="6dp"
                    android:text="@string/slash"/>

                <ImageView
                    android:id="@+id/ivCurrentNum"
                    android:layout_width="14dp"
                    android:layout_gravity="center"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_current_num"
                    android:contentDescription="@string/ic_current_people" />

                <ImageView
                    android:id="@+id/ivCurrentNum2"
                    android:layout_gravity="center"
                    android:layout_width="14dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_current_num"
                    android:contentDescription="@string/ic_current_people" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_gravity="center"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_max_num"
                    android:id="@+id/ivMaxNum"
                    android:contentDescription="@string/ic_max_people" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvChallengeTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRecruitText"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/challenge_time"
                android:textSize="13sp"
                android:textColor="@color/text_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEndTime"
                app:layout_constraintTop_toBottomOf="@+id/tvRecruitText"
                android:text="@string/example_start_time"
                android:layout_marginTop="24dp"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tilde"
                android:id="@+id/tvTilde"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRecruitText"
                app:layout_constraintEnd_toStartOf="@+id/tvEndTime"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_start_time"
                android:id="@+id/tvStartTime"
                android:layout_marginTop="24dp"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                app:layout_constraintTop_toBottomOf="@+id/tvRecruitText"
                app:layout_constraintEnd_toStartOf="@+id/tvTilde"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                android:id="@+id/tvDate"
                android:layout_marginTop="24dp"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:layout_marginEnd="6dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRecruitText"
                app:layout_constraintEnd_toStartOf="@+id/tvStartTime"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvChallengeTimeText"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/reservation_point"
                android:textSize="13sp"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/tvPoint"
                android:layout_marginTop="24dp"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                app:layout_constraintTop_toBottomOf="@+id/tvChallengeTimeText"
                app:layout_constraintEnd_toStartOf="@+id/tvPointSymbol"
                android:layout_marginEnd="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_reservation_point"
                android:gravity="end" />

            <TextView
                android:id="@+id/tvPointSymbol"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvChallengeTimeText"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:text="@string/point_unit"
                android:gravity="end" />

            <LinearLayout
                android:id="@+id/layoutHostBtn"
                android:visibility="visible"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/rounded_delete_btn"
                    android:text="@string/challenge_delete"/>

                <Button
                    android:id="@+id/btnEnter"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_enter_btn"
                    android:text="@string/enter_room"/>

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:id="@+id/layoutUserBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:id="@+id/layoutEnterText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/participate_description"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_hand"
                        android:contentDescription="@string/ic_hand" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/open_room_description"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnEnterChallenge"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_enter_btn"
                    android:text="@string/participate_challenge"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/layoutUserEnterBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <Button
                        android:id="@+id/btnCancle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_delete_btn"
                        android:text="@string/challenge_cancle"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnUserEnter"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:background="@drawable/rounded_waiting_btn"
                        android:text="@string/enter_room"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>